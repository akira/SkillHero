.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", projects_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Projects
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.project._type", :default => t("activerecord.labels._type", :default => "_type"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @projects.each do |project|
          %tr{:class => cycle("odd", "even")}
            %td
              = project.id
            %td
              = link_to project._type, project_path(project)
            %td
              = project.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", project_path(project)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_project_path(project)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", project_path(project), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
