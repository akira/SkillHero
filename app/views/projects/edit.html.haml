.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", projects_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_project_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Project
    .inner
      = form_for @project, :url => project_path(@project), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
