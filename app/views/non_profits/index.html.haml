.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", non_profits_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_non_profit_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      NonProfits
    .inner
      %table.table
        %tr
          %th.first Name
          %th Location
          %th.last &nbsp;
        - @non_profits.each do |non_profit|
          %tr{:class => cycle("odd", "even")}
            %td{:width=>'250px'}= link_to non_profit.name, non_profit
            %td #{non_profit.city}, #{non_profit.state}              
            %td.last
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
