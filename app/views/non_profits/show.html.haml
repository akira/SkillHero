.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", non_profits_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_non_profit_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", non_profit_path
  .content
    .inner
      %h2 Welcome #{@non_profit.name}!  
      %br
      %h3 Current Active Projects:
      %ul
        - Project.all.each do |project|
          %li= link_to project.name, project
      %h3= link_to 'Add a new Project', new_project_path        
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_non_profit_path(@non_profit), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), non_profit_path(@non_profit), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
