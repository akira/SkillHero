.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", users_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", user_path
  .content
    .inner
      %p
        %b
          = image_tag @user.profile_image_url
      %p
        %b
          = t("activerecord.attributes.user.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = @user.first_name
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = @user.last_name
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Job Title"))
          \:
        = @user.job_title
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Location"))
          \:
        = @user.location
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "LinkIn Profile"))
          \:
        = link_to @user.linked_in_url,@user.linked_in_url, :target=>'_blank'

      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_user_path(@user), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), user_path(@user), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
