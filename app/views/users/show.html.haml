.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.show", :default => "#{current_user.first_name} #{current_user.last_name}")}", user_path    
      %li= link_to "Your Projects", projects_path
  .content
    .inner
      %p
        %b
          = image_tag @user.profile_image_url
      %p
        %b
          = t("activerecord.attributes.user.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = @user.first_name
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = @user.last_name
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Job Title"))
          \:
        = @user.job_title
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "Location"))
          \:
        = @user.location
      %p
        %b
          = t("activerecord.attributes.user.last_name", :default => t("activerecord.labels.last_name", :default => "LinkIn Profile"))
          \:
        = link_to @user.linked_in_url,@user.linked_in_url, :target=>'blank'

      .wat-cf

      %h3 Volunteer Projects:
      - if current_user.projects.blank?
        - if current_user
          %h4 You have no projects.   #{link_to 'Find a project to volunteer', projects_url}
      - else
        %ul
          - current_user.projects.each do |project|
            %li= link_to project.name, project_path(project)
        - if current_user          
          %h4 #{link_to 'Volunteer for another Project', projects_url}      
- content_for :sidebar, render(:partial => 'sidebar')