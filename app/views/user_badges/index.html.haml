.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", user_badges_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_badge_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      UserBadges
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.user_badge._type", :default => t("activerecord.labels._type", :default => "_type"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @user_badges.each do |user_badge|
          %tr{:class => cycle("odd", "even")}
            %td
              = user_badge.id
            %td
              = link_to user_badge._type, user_badge_path(user_badge)
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", user_badge_path(user_badge)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_user_badge_path(user_badge)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", user_badge_path(user_badge), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
