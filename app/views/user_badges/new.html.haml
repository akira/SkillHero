.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", user_badges_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_badge_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      UserBadge
    .inner
      = form_for :user_badge, :url => user_badges_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
