.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", user_badges_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_badge_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", user_badge_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.user_badge._type", :default => t("activerecord.labels._type", :default => " type"))
          \:
        = @user_badge._type
      %p
        %b
          = t("activerecord.attributes.user_badge._id", :default => t("activerecord.labels._id", :default => ""))
          \:
        = @user_badge._id
      %p
        %b
          = t("activerecord.attributes.user_badge.badge_id", :default => t("activerecord.labels.badge_id", :default => "Badge"))
          \:
        = @user_badge.badge_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_user_badge_path(@user_badge), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), user_badge_path(@user_badge), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
