.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", user_project_ratings_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_project_rating_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", user_project_rating_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.user_project_rating._type", :default => t("activerecord.labels._type", :default => " type"))
          \:
        = @user_project_rating._type
      %p
        %b
          = t("activerecord.attributes.user_project_rating._id", :default => t("activerecord.labels._id", :default => ""))
          \:
        = @user_project_rating._id
      %p
        %b
          = t("activerecord.attributes.user_project_rating.rating", :default => t("activerecord.labels.rating", :default => "Rating"))
          \:
        = @user_project_rating.rating
      %p
        %b
          = t("activerecord.attributes.user_project_rating.review", :default => t("activerecord.labels.review", :default => "Review"))
          \:
        = @user_project_rating.review
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_user_project_rating_path(@user_project_rating), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), user_project_rating_path(@user_project_rating), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
