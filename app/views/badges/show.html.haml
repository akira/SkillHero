.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", badges_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_badge_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", badge_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.badge.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @badge.name
      %p
        %b
          = t("activerecord.attributes.badge.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @badge.description
      %p
        %b
          = t("activerecord.attributes.badge.photo_url", :default => t("activerecord.labels.photo_url", :default => "Photo url"))
          \:
        =image_tag @badge.photo_url
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_badge_path(@badge), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), badge_path(@badge), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
