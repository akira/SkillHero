.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", badges_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_badge_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_badge_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Badge
    .inner
      = form_for @badge, :url => badge_path(@badge), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
